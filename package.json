{
    "name": "mutualzz",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "typecheck": "turbo run typecheck",
        "prestart": "pnpm install && pnpm build:packages && pnpm build:server",
        "build:server": "turbo run build --filter=\"./apps/server\"",
        "build:packages": "turbo run build --filter=\"./packages/logger\" --filter=\"./packages/validators\" --filter=\"./packages/types\" --filter=\"./packages/ui-core\"",
        "build:ui": "turbo run build --filter=\"./packages/ui-web\" --filter=\"./packages/ui-native\"",
        "gen-changelog": "node scripts/generateChangelog.mjs",
        "prepare": "husky",
        "dev:frontend": "turbo run dev --filter=\"./apps/app\" --filter=\"./packages/ui\"",
        "release": "git checkout release && git merge master && git push origin release && git checkout master",
        "init-submodules": "git submodule update --init --recursive && git submodule foreach git checkout master"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "prettier": "^3.8.1",
        "prettier-plugin-organize-imports": "^4.3.0",
        "turbo": "^2.8.2",
        "typescript": "5.9.3"
    },
    "pnpm": {
        "overrides": {
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "@types/react": "19.1.10",
            "@types/react-dom": "19.1.0",
            "@emotion/react": "11.14.0",
            "@emotion/styled": "11.14.1",
            "@emotion/native": "11.11.0",
            "react-native-svg": "15.12.1",
            "@shopify/react-native-skia": "2.2.12"
        },
        "onlyBuiltDependencies": [
            "@discordjs/opus",
            "@parcel/watcher",
            "@sentry-internal/node-cpu-profiler",
            "@shopify/react-native-skia",
            "@swc/core",
            "@yukikaze-bot/erlpack",
            "bcrypt",
            "bufferutil",
            "esbuild",
            "sharp",
            "unrs-resolver",
            "zlib-sync"
        ]
    },
    "engines": {
        "node": ">=22"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "pnpm@10.28.2"
}
